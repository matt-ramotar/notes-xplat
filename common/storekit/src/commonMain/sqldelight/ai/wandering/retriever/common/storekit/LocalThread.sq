CREATE TABLE localThread(
    id TEXT NOT NULL PRIMARY KEY,
    userId TEXT NOT NULL,
    created TEXT NOT NULL,
    FOREIGN KEY (userId) REFERENCES localUser (id)
);

find:
SELECT *
FROM localThread;

findById:
SELECT *
FROM localThread
WHERE id = ?;

upsert:
INSERT OR REPLACE INTO localThread
VALUES ?;

clearById:
DELETE
FROM localThread
WHERE id = ?;

clearAll:
DELETE FROM localThread;
