CREATE TABLE noteTag(
    noteId TEXT NOT NULL,
    tagId TEXT NOT NULL,
    FOREIGN KEY (noteId) REFERENCES localNote (id),
    FOREIGN KEY (tagId) REFERENCES localTag (id),
    PRIMARY KEY (noteId, tagId)
);

getById:
SELECT *
FROM noteTag
WHERE noteId = ? AND tagId = ?;

upsert:
INSERT OR REPLACE INTO noteTag
VALUES ?;

clearById:
DELETE
FROM noteTag
WHERE noteId = ? AND tagId = ?;

clearAll:
DELETE FROM noteTag;
